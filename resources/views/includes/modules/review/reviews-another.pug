if others.count() > 0
    section.news__another
        .container
            .row
                h2.header__h2 Другие отзывы
            .news__another-card__wrapper
                each item in others
                    - var href = '/review/' + item.id
                    .cards
                        .cards__head
                            img.cards__img(src=item.document.documentFile.preview, alt="")
                        .cards__body
                            .cards__info
                                a.cards__name.--doc(href=href) #{item.authorName}
                                p.cards__date #{item.created_at}
                            a.cards__download(href=item.document.documentFile.file)
                                img.card__download-img(src="/assets/img/svg/download.svg", alt="")
